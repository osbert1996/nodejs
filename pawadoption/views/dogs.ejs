<% include master/header %>
<div class="container">
	<header class="jumbotron">
		<h1>Welcome, Paw Adopters!</h1>
		<p>
			<a class="btn btn-primary" href="/dogs/add">Add New Paws</a>
		</p>
		<p>View our rescued paw friends</p>
	</header>

	<div class="row">
		<div class="col-lg-12">
			<h3>Our latest friends</h3>
		</div>
			<% dogs.forEach(function(dog){ %>
				<div class="col-sm-6 col-md-3 my-3";>
					<div class="img-thumbnail">
					<figure class="figure my-0">
						<img class="img-fluid figure-img" src="<%= dog.image %>" alt="">
						<figcaption class="figure-caption">
							<h6><%= dog.name %></h6>
						</figcaption>
						</figure>
					</div>
				</div>
			<% }); %>
	</div>
	<% include master/footer %>
</div>