<% include ../master/header %>
    <div class="container">
        <div class="row">
            <div style="width:30%; margin:0 auto; text-align: center;">
                <h1 style="margin:1.5rem;">Edit <%= dog.name %></h1>
                <form action="/dogs/<%= dog._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="dog[name]" value="<%=dog.name %>">
                    </div>
                                        <div class="form-group">
                        <input class="form-control" type="number" name="dog[age]" value="<%=dog.age %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="dog[breed]" value="<%=dog.breed%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="dog[image]" value="<%=dog.image%>">
                    </div>
                    <div class="form-group">
                        <textarea name="dog[description]" class="form-control" rows="3"><%=dog.description%></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <div class="form-group">
                    <a href="/dogs" class="btn btn-secondary btn-block">Back</a>
                </div>
                <div class="form-group">
                    <form action="/dogs/<%= dog._id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger btn-block">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        <% include ../master/footer %>
    </div>