<% include ../master/header %>
    <div class="container">
        <% if(flash.error) {%>
            <h2><%= flash.error%></h2>
            <%}%>
                <header class="jumbotron">
                    <h1>Welcome, Paw Adopters! <span class="fa fa-paw"></h1>
                    <p>
                        <a class="btn btn-primary" href="/dogs/add">Add New Friends <span class="fa fa-paw"></span></a>
                    </p>
                    <p>Meet our friends</p>
                </header>
                <div class="row text-center d-md-inline-flex flex-row">
                    <div class="col-lg-12">
                        <h3 class="my-4">Our latest friends</h3>
                    </div>
                    <% dogs.forEach(function(dog){ %>
                        <div class="col-sm-6 col-md-3 mb-3 p-1">
                            <!--                    <div class="img-thumbnail">
                        <figure class="figure my-0"> -->
                            <a href="/dogs/<%= dog._id %>"><img href="/dogs/<%= dog._id %>" class="img-fluid figure-img" src="<%= dog.image %>" alt=""></a>
                            <figcaption class="figure-caption">
                                <h4><%= dog.name %></h4>
                                <p>
                                    <a href="/dogs/<%= dog._id %>" class="btn btn-primary">
                                        More Info
                                    </a>
                                </p>
                            </figcaption>
                            <!-- </figure>
                    </div> -->
                        </div>
                        <% }); %>
                </div>
                <% include ../master/script %>
                    <% include ../master/footer %>
    </div>