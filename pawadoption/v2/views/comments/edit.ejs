<% include ../master/header %>
    <div class="container">
        <div class="row">
            <div style="width:30%; margin:0 auto; text-align:center;">
                <h1 style="margin:1.5rem;">Edit comment</h1>
                <form action="/dogs/<%= dog %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[message]" placeholder="message" value="<%= comment.message%>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/dogs" class="btn btn-secondary btn-block">Back</a>
            </div>
        </div>
        <% include ../master/footer %>
    </div>